# general settings
auto-reload yes
max-items 50 

# externel browser
browser "/usr/bin/w3m %u"
macro m set browser "/usr/bin/mpv %u"; open-in-browser ; set browser "/usr/bin/w3m %u"
macro . set browser "/home/djwilcox/bin/yank -i %u"; open-in-browser ; set browser "/usr/bin/w3m %u"
#macro l set browser "/usr/bin/chromium-browser %u"; open-in-browser ; set browser "/usr/bin/w3m %u"
macro l set browser "/usr/bin/firefox %u"; open-in-browser ; set browser "/usr/bin/w3m %u"

# cvlc send stand error to /dev/null and run in background
#macro . set browser "/usr/bin/cvlc --quiet %u 2>/dev/null &"; open-in-browser ; set browser "/usr/bin/w3m %u"

# mpc get enclosure url with youtube-dl and add to queue
macro . set browser "/usr/bin/mpc add $(youtube-dl -g %u)"; open-in-browser ; set browser "/usr/bin/w3m %u"

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# podboat
download-path "~/Downloads/%n"
player "mpv"
       
# colours
color background         default   default
color listnormal         default   default
color listnormal_unread  default   default
color listfocus          black     blue
color listfocus_unread   black     blue
color info               black   blue
color article            default   default

# highlights
highlight article "^(Feed|Title|Link|Date|Author):.*$" color12 color8
highlight article "https?://[^ ]+" color4 color8 protect
